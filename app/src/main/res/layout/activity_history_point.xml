<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.view.point.HistoryPointActivity"
        android:background="#fff">

    <RelativeLayout
            android:id="@+id/relaHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_stoke_round_hispoint"
    >
        <ImageButton
                android:id="@+id/ibtnCloseHisPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black"
                android:background="@android:color/transparent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:background="@drawable/shape_stoke_round_hispoint"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_surplus"
                    android:textColor="@color/colorPrimaryText"/>

            <TextView
                    android:id="@+id/txtPointSurplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorAccent"
                    android:text="0"/>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvataCus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_avata_100dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

        <TextView
                android:id="@+id/txtNameCus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:layout_below="@id/imgAvataCus"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="Quốc Thiên"
        />
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/lnMidde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relaHeader"
            android:layout_alignParentStart="true"
            android:background="#C5C5C5"
            android:layout_marginStart="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorIconsText"
                android:orientation="horizontal"
                android:weightSum="11">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.4"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_point_use"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryText"/>

                <TextView
                        android:id="@+id/txtPointUse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:text="0"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:background="#C5C5C5"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5.4"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_point_accumulated"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="12sp"
                />

                <TextView
                        android:id="@+id/txtPointAccumulated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:text="0"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.tuyenmonkey.mkloader.MKLoader
            android:id="@+id/progressLoader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:mk_type="TwinFishesSpinner"
            app:mk_color="@color/colorPrimary"
            android:layout_below="@id/lnMidde"
            android:layout_centerHorizontal="true"
    />

    <LinearLayout
            android:id="@+id/lnFooter"
            android:layout_below="@+id/lnMidde"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:gravity="center">
            <Button
                    android:id="@+id/btnPointUse"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="40dp"
                    android:text="@string/hide_point_use"
                    android:background="@color/colorPrimary"
                    android:layout_marginEnd="4dp"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            <Button
                    android:id="@+id/btnPointAccumulated"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="40dp"
                    android:text="@string/hide_point_accumulated"
                    android:textAllCaps="false"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:background="@color/color_grey_light">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/relaContinuteOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lnMidde"
            android:gravity="center"
            android:visibility="gone"
    >

        <TextView
                android:id="@+id/txtNotifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/no_point_continute_order"
        />

        <Button
                android:id="@+id/btnContinuteOrder"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNotifi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorIconsText"
                android:background="@drawable/shape_btn_login"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/continue_order"/>
    </RelativeLayout>

</RelativeLayout>