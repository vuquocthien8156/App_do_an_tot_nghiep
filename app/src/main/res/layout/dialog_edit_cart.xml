<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:clipToPadding="true"
                android:background="@drawable/shape_corner_stroke_rectangle_gray">

    <RelativeLayout
            android:id="@+id/relaHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/txtNameProductEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/ibtnClose"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:text="Trà sữa chân trâu"
                android:gravity="center"
                android:ellipsize="end"/>
        <ImageButton
                android:id="@+id/ibtnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout android:id="@+id/line1"
                  android:layout_below="@id/relaHeader"
                  android:orientation="vertical"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:background="@color/colorSecondaryText"
                  android:layout_width="match_parent"
                  android:layout_height="1dp"/>

    <TextView
            android:id="@+id/txtNote"
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/your_note"/>

    <EditText
            android:id="@+id/edtNote"
            android:layout_below="@id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="14sp"
            android:textCursorDrawable="@null"
            android:hint="@string/example_note"
            android:background="@drawable/shape_corner_stroke_rectangle_gray"/>

    <RelativeLayout
            android:id="@+id/relaQuantity"
            android:layout_below="@+id/edtNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp">
        <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="48sp"
                android:src="@drawable/ic_remove_orange_24dp"
                android:background="@drawable/shape_corner_stroke_rectangle_gray"
        />

        <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnMinus"
                android:textSize="22sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorPrimaryText"
                android:text="0"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"/>

        <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/txtQuantity"
                android:src="@drawable/ic_add_orange_24dp"
                android:background="@drawable/shape_corner_stroke_rectangle_gray"
        />

    </RelativeLayout>

    <Button
            android:id="@+id/btnEditOrRemove"
            android:layout_below="@+id/relaQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_cart"
            android:textStyle="bold"
            android:textColor="@color/colorIconsText"
            android:background="@drawable/shape_btn_cart_update"
            />
</RelativeLayout>