<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:id="@+id/card_item_topping"
        android:focusable="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

    <RelativeLayout
            android:id="@+id/relaClickTopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">
        <ImageView
                android:id="@+id/imgTopping"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                />
        <TextView
                android:id="@+id/txtNameTopping"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_below="@id/imgTopping"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryText"
                android:text="Trân châu đường đen"
                />

        <TextView
                android:id="@+id/txtPriceToping"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="10.000đ"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_below="@id/txtNameTopping"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>