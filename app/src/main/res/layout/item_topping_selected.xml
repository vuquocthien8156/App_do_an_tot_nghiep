<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:weightSum="10"
              android:gravity="center_vertical">
    <TextView
            android:id="@+id/txtNameTopping"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="wrap_content"
            android:text="Trân Châu Hoàng Kim"/>

    <TextView
            android:id="@+id/txtQuantityTopping"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="2"
            android:drawableStart="@drawable/ic_multiplication_black"
            android:textColor="@color/colorPrimaryText"
            android:layout_weight="1"/>
    <TextView
            android:id="@+id/txtPriceTopping"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="10.000đ"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>
    <ImageButton
            android:id="@+id/btnDeleteToping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_orange_24dp"
            android:layout_marginEnd="5dp"/>
</LinearLayout>