<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
        <TextView
                android:id="@+id/txtPoint"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_height="wrap_content"
                android:text="+5"
                android:gravity="center"
                android:textSize="32sp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:textColor="@color/colorIconsText"
                android:background="@drawable/shape_round_btn_to_top"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="15dp"/>
        <TextView
                android:id="@+id/txtOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtPoint"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryText"
                android:text="Đơn hàng 100000000"/>


        <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtPoint"
                android:layout_below="@id/txtOrderId"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/txtWatch"
                android:textColor="@color/colorPrimaryText"
                android:text="16/06/2019 11:27"/>

        <TextView
                android:id="@+id/txtWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/watch"
                android:layout_below="@id/txtOrderId"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>