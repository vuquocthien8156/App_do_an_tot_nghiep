        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.login.EmailLoginActivity">

    <include layout="@layout/toolbar_login"
             android:id="@+id/inToolbar"/>

    <FrameLayout
            android:id="@+id/frmLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/inToolbar">

        <fragment
                android:id="@+id/fragmentEnterEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.qthien.t__t.view.login.FragmentEnterEmail"/>

    </FrameLayout>

</RelativeLayout>