<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp">
    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

        <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:padding="2dp"
        >
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="9.8"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/imgProductCart"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_alignParentStart="true"
                        android:layout_margin="4dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentTop="true"/>
                <TextView
                        android:id="@+id/txtNameProductCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:padding="2dp"
                        android:layout_alignParentEnd="true"
                        android:text="Trà sữa trân châu ahihi (L)"
                        android:layout_marginTop="6dp"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/imgProductCart"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_marginEnd="0dp"/>
                <TextView
                        android:id="@+id/txtQuantityProductCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:paddingStart="5dp"
                        android:layout_toEndOf="@id/imgProductCart"
                        android:gravity="center"
                        android:paddingEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:drawableStart="@drawable/ic_multiplication_black"
                        android:layout_below="@id/txtNameProductCart"
                />
                <TextView
                        android:id="@+id/txtPriceProductCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtNameProductCart"
                        android:layout_marginStart="0dp"
                        android:text="50.000đ"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/txtQuantityProductCart"
                />
                <TextView
                        android:id="@+id/editCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="#00C20D"
                        android:textSize="12sp"
                        android:layout_below="@id/txtQuantityProductCart"/>
            </RelativeLayout>
            <ImageButton
                    android:id="@+id/ibtnExpand"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_keyboard_arrow_up_black_24dp"
            />
        </LinearLayout>
        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/expandLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linear"
                app:ael_duration="300"
                app:ael_expanded="false"
                app:ael_interpolator="bounce"
                android:orientation="vertical"
        >

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/Detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>