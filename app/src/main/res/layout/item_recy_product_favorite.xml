<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#fff"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:id="@+id/relaItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/imgProductFavorite"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"/>
    <TextView
            android:id="@+id/txtNameProductFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorPrimaryText"
            android:layout_toEndOf="@id/imgProductFavorite"
            android:layout_marginEnd="20dp"
            android:text="Trà sữa trân châu"/>
    <TextView
            android:id="@+id/txtPriceProductFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProductFavorite"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:text="50.000đ"
            android:layout_below="@id/txtNameProductFavorite"
            android:layout_marginEnd="20dp"/>
    <ImageButton
            android:id="@+id/ibtnUnFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_unlike"
            android:background="@android:color/transparent"
            android:layout_below="@id/txtPriceProductFavorite"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"/>
        <ImageButton
                android:id="@+id/ibtnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_shopping_cart_orange_24dp"
                android:background="@android:color/transparent"
                android:layout_below="@id/txtPriceProductFavorite"
                android:layout_toStartOf="@id/ibtnUnFavorite"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"/>
</RelativeLayout>
</android.support.v7.widget.CardView>