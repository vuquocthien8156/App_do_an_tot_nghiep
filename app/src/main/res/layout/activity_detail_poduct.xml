<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.detail_product.DetailProductActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDetailProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true">

    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarDetailProduct"
            android:fillViewport="true">
        <RelativeLayout
                android:id="@+id/relaNestedDetailProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <FrameLayout
                    android:id="@+id/frmViewPagerDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true">
                <android.support.v4.view.ViewPager
                        android:id="@+id/viewpagerImgProducts"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                </android.support.v4.view.ViewPager>

                <TextView
                        android:id="@+id/txtPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryText"
                        android:text="1/15"
                        android:layout_marginBottom="15dp"/>
            </FrameLayout>

            <TextView
                    android:id="@+id/txtNameProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryText"
                    android:text="Trà sữa trân châu"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:background="#fff"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/frmViewPagerDetail"/>

            <LinearLayout
                    android:id="@+id/lnPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_below="@id/txtNameProduct"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true">
                <LinearLayout
                        android:id="@+id/line1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#000"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="1dp"/>
                <LinearLayout
                        android:id="@+id/lnPriceS"
                        android:layout_width="match_parent"
                        android:weightSum="10"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txtSizeS"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/colorPrimaryText"
                            android:text="Size S"/>
                    <TextView
                            android:id="@+id/txtPriceSProduct"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Giá: 56,000đ"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:paddingBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#000"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="1dp"/>

                <LinearLayout
                        android:id="@+id/lnPriceM"
                        android:layout_width="match_parent"
                        android:weightSum="10"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txtSizeM"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/colorPrimaryText"
                            android:text="Size M"
                    />
                    <TextView
                            android:id="@+id/txtPriceMProduct"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Giá: 60,000đ"
                            android:textStyle="bold"
                            android:gravity="end"
                    />

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#000"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="1dp"/>

                <LinearLayout
                        android:id="@+id/lnPriceL"
                        android:layout_width="match_parent"
                        android:weightSum="10"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txtSizeL"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/colorPrimaryText"
                            android:text="Size L"
                    />
                    <TextView
                            android:id="@+id/txtPriceLProduct"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Giá: 64,000đ"
                            android:textStyle="bold"
                            android:gravity="end"
                    />
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#000"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="1dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lnDeription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lnPrice"
                    android:layout_marginTop="8dp"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"
                        android:text="@string/decription"/>
                <at.blogc.android.views.ExpandableTextView
                        android:id="@+id/txtDeriptionProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:ellipsize="end"
                        app:animation_duration="750"
                        android:text="@string/text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                />
                <Button
                        android:id="@+id/btnReadMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/read_more"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lnEvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lnDeription"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">
                <TextView
                        android:text="@string/customer_evaluation"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:id="@+id/lnInfoEvaluation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:weightSum="10">
                    <LinearLayout
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:orientation="vertical">
                        <TextView
                                android:text="4,5/5"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <RatingBar
                                android:layout_width="wrap_content"
                                android:numStars="5"
                                android:rating="4.5"
                                android:layout_gravity="center"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="272 bình chọn"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textColor="@color/colorPrimaryText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="2dp"
                            android:background="@color/color_grey_light"
                            android:layout_height="match_parent"/>

                    <LinearLayout
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <RatingBar
                                    android:layout_width="wrap_content"
                                    android:numStars="5"
                                    android:rating="5"
                                    android:layout_marginStart="20dp"
                                    android:layout_gravity="center"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_height="wrap_content"/>
                            <ProgressBar
                                    android:layout_marginStart="10dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:progress="60"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:progressDrawable="@drawable/layer_progressbar"
                                    android:layout_height="5dp"/>

                            <TextView
                                    android:layout_marginStart="10dp"
                                    android:text="60%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <RatingBar
                                    android:layout_width="wrap_content"
                                    android:numStars="5"
                                    android:rating="4"
                                    android:layout_marginStart="20dp"
                                    android:layout_gravity="center"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_height="wrap_content"/>
                            <ProgressBar
                                    android:layout_marginStart="10dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:progress="60"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:progressDrawable="@drawable/layer_progressbar"
                                    android:layout_height="5dp"/>

                            <TextView
                                    android:layout_marginStart="10dp"
                                    android:text="60%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <RatingBar
                                    android:layout_width="wrap_content"
                                    android:numStars="5"
                                    android:rating="3"
                                    android:layout_marginStart="20dp"
                                    android:layout_gravity="center"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_height="wrap_content"/>
                            <ProgressBar
                                    android:layout_marginStart="10dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:progress="60"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:progressDrawable="@drawable/layer_progressbar"
                                    android:layout_height="5dp"/>

                            <TextView
                                    android:layout_marginStart="10dp"
                                    android:text="60%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <RatingBar
                                    android:layout_width="wrap_content"
                                    android:numStars="5"
                                    android:rating="2"
                                    android:layout_marginStart="20dp"
                                    android:layout_gravity="center"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_height="wrap_content"/>
                            <ProgressBar
                                    android:layout_marginStart="10dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:progress="60"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:progressDrawable="@drawable/layer_progressbar"
                                    android:layout_height="5dp"/>

                            <TextView
                                    android:layout_marginStart="10dp"
                                    android:text="60%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <RatingBar
                                    android:layout_width="wrap_content"
                                    android:numStars="5"
                                    android:rating="1"
                                    android:layout_marginStart="20dp"
                                    android:layout_gravity="center"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_height="wrap_content"/>
                            <ProgressBar
                                    android:layout_marginStart="10dp"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:progress="60"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:progressDrawable="@drawable/layer_progressbar"
                                    android:layout_height="5dp"/>

                            <TextView
                                    android:layout_marginStart="10dp"
                                    android:text="60%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <Button
                        android:text="@string/write_evaluation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerEvaluation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>