<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <Button
            android:text="@string/chosse_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnChossePicture"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:background="@drawable/shape_btn_login"
            android:backgroundTint="@color/colorAccent"
    />
    <Button
            android:text="@string/camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_login"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="3dp"
            android:id="@+id/btnCamera" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnChossePicture" app:layout_constraintHorizontal_bias="0.0"
             app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>