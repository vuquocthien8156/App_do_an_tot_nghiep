<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
    <RelativeLayout
            android:id="@+id/relaLayoutItemOrder"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
        <TextView
                android:id="@+id/txtNameCustomerOrder"
                android:layout_width="wrap_content"
                android:text="Vũ Quốc Thiên"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryText"/>
        <TextView
                android:id="@+id/txtPhoneCustomerOrder"
                android:layout_width="wrap_content"
                android:text="0782328156"
                android:layout_toEndOf="@id/txtNameCustomerOrder"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryText"/>
        <TextView
                android:id="@+id/txtAddressOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45 Đường 3 , Tam Bình , Thủ Đức"
                android:ellipsize="end"
                android:textSize="12sp"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/lnPointAndPrice"
                android:layout_below="@id/txtNameCustomerOrder"/>
        <TextView
                android:id="@+id/txtStatusOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã giao hàng"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_below="@id/txtAddressOrder"/>
        <TextView
                android:id="@+id/txtTimeOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11h42 25/2/2019"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorSecondaryText"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txtStatusOrder"/>
        <LinearLayout
                android:id="@+id/lnPointAndPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/txtNameCustomerOrder"
                android:layout_alignParentEnd="true"
        >
            <TextView
                    android:id="@+id/txtPointOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorAccent"
                    android:drawableEnd="@drawable/ic_rating"
            />
            <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:text="50.000đ"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>