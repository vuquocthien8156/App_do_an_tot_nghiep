<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.cart.CartActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarCart"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_above="@id/ln"
            android:fillViewport="true" android:layout_marginTop="0dp" android:layout_marginStart="2dp"
            android:layout_marginEnd="-2dp" android:layout_marginBottom="0dp">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:background="@color/colorIconsText"
            android:padding="10dp">
        <RelativeLayout
                android:id="@+id/relaToDepay"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent">
            <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:textColor="@color/colorIconsText"
                    android:background="@drawable/shape_stroke_rectangle"
                    android:text="200"/>
            <TextView
                    android:id="@+id/txtToDepay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_depay"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorIconsText"
                    android:layout_toEndOf="@id/txtQuantity"
                    android:gravity="end"
                    android:textAllCaps="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@id/txtSumPriceCart"
            />
            <TextView
                    android:id="@+id/txtSumPriceCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textSize="16sp"
                    android:text="50.000Ä‘"
                    android:textColor="@color/colorIconsText"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>