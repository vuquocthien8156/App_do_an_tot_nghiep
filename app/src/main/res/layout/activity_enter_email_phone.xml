<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.view.customer.EnterEmailPhoneActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            app:titleTextColor="@color/colorIconsText">

    </android.support.v7.widget.Toolbar>

    <TextView
            android:id="@+id/txtTitleMailPhone"
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/lnEdtEmailPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/txtTitleMailPhone"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp">
        <EditText
                android:id="@+id/edtEnterEmailPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txtShowError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
        />
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_below="@id/lnEdtEmailPhone">
        <Button
                android:id="@+id/btnContinute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_btn_login"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorIconsText"
                android:text="@string/continute"/>
        <LinearLayout
                android:id="@+id/progressLoader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:background="@drawable/shape_btn_login"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
        >
            <com.tuyenmonkey.mkloader.MKLoader
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:mk_type="Worm"
                    app:mk_color="@color/colorPrimary"
            />
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>