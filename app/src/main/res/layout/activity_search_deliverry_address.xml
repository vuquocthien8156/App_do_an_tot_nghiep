<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.delivery_address.SearchDeliverryAddressActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarSearchDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp">
            <EditText
                    android:id="@+id/edtSearchPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorIconsText"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:drawableStart="@drawable/ic_search_white_24dp"
                    android:drawablePadding="10dp"
                    android:paddingEnd="10dp"
                    android:maxLines="1"
                    android:textCursorDrawable="@null"
                    android:paddingStart="10dp"
                    android:imeOptions="actionSearch"
            />
            <ImageButton
                    android:id="@+id/ibtnClear"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_close"
                    android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerPlace"
            android:layout_below="@id/btnSelectOnMap"
            android:layout_alignParentStart="true"
            android:background="@color/color_grey_light"
            android:layout_above="@id/powered_by_google"
            android:layout_alignParentEnd="true">

    </android.support.v7.widget.RecyclerView>

    <Button
            android:id="@+id/btnSelectOnMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/toolbarSearchDelivery"
            android:textAllCaps="false"
            android:background="#fff"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:drawableStart="@drawable/ic_location_red_24dp"
            android:text="@string/select_address_in_map"/>

    <ImageView
            android:id="@+id/powered_by_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/powered_by_google_light"/>
</RelativeLayout>