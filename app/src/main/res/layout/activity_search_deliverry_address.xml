<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.delivery_address.SearchDeliverryAddressActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarSearchDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp">
            <EditText
                    android:id="@+id/edtSearchPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorIconsText"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:imeOptions="actionSearch"
            />
            <ImageButton
                    android:id="@+id/ibtnClear"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_rating"
                    android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerPlace"
            android:layout_below="@id/btnSelectOnMap"
            android:layout_alignParentStart="true"
            android:background="@color/color_grey_light"
            android:layout_alignParentEnd="true">

    </android.support.v7.widget.RecyclerView>

    <Button
            android:id="@+id/btnSelectOnMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/toolbarSearchDelivery"
            android:textAllCaps="false"
            android:background="#fff"
            android:text="@string/select_address_in_map"/>
</RelativeLayout>