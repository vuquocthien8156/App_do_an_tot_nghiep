<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".view.view_login.LoginActivity">

    <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar">


    </android.support.v7.widget.Toolbar>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerVertical="true"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
                  android:gravity="center"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentEnd="true">

        <ImageView android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:scaleType="fitCenter"
                   android:src="@drawable/ic_main"
                   android:layout_marginBottom="30dp"/>

        <Button
                android:text="@string/login_with_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="phoneLogin"
                android:textAllCaps="false"
                android:background="@drawable/shape_btn_login"
                android:backgroundTint="@color/colorAccent"
                android:textColor="#fff"
                android:paddingStart="10dp"
                android:paddingEnd="25dp"
                android:drawableStart="@drawable/ic_phone"
                android:id="@+id/btnLoginPhone"
                android:textSize="16sp"

        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLoginFB"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:onClick="loginFacebook"
                android:backgroundTint="@color/com_facebook_blue"
                android:text="Facebook"
                android:drawableStart="@drawable/com_facebook_button_login_logo"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:background="@drawable/shape_btn_login"
                android:textColor="#fff"
                android:layout_marginTop="5dp"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLoginEmail"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:text="Email"
                android:backgroundTint="@color/mail"
                android:background="@drawable/shape_btn_login"
                android:textColor="#fff"
                android:drawableStart="@drawable/ic_mail"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:onClick="loginEmail"
                android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lnLoader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:gravity="center">
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>