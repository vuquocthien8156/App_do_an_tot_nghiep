<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.login.LoginActivity">

    <include layout="@layout/toolbar_login"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerVertical="true"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
                  android:gravity="center"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentEnd="true">
        <Button
                android:text="@string/login_with_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="phoneLogin"
                android:textAllCaps="false"
                android:id="@+id/btnLoginPhone"
                android:textSize="16sp"

        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLoginFB"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:onClick="loginFacebook"
                android:text="Facebook"
                android:layout_marginTop="5dp"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLoginEmail"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:text="Email"
                android:onClick="loginEmail"
                android:layout_marginTop="5dp"/>
    </LinearLayout>

</RelativeLayout>