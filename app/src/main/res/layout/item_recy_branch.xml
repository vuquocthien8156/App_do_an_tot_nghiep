<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        >

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <FrameLayout
                android:id="@+id/frmImgBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                >
            <ImageView
                    android:id="@+id/imgBranch"
                    android:layout_width="280dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/ic_phonee"
                    android:text="0782328156"
                    android:textSize="12sp"
                    android:textColor="@color/colorIconsText"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:drawableStart="@drawable/ic_location_directory"
                    android:text="@string/directory"
                    android:gravity="center"
                    android:textColor="@color/colorIconsText"
                    android:textSize="12sp"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"/>
        </FrameLayout>

        <TextView
                android:id="@+id/txtNameBranch"
                android:layout_below="@id/frmImgBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="6dp"
                android:textColor="@color/colorPrimaryText"
                android:text="Chi nhánh thủ đức"
                android:layout_alignParentStart="true"
                />

        <TextView
                android:id="@+id/txtAddressBranch"
                android:layout_below="@id/txtNameBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:textSize="14sp"
                android:paddingEnd="6dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorSecondaryText"
                android:text="45 Đường 3, Tam bình , Thủ Đức"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>