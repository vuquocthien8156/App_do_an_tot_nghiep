<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.reply_ealuation.DetailEvaluationActivity">

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_above="@id/relaEdtEvaluation"
            android:fillViewport="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:id="@+id/relaHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true">
                <ImageView
                        android:id="@+id/img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:scaleType="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/txtContentEvaluation"
                        android:layout_below="@id/img"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="21/08/1998"/>
                <TextView
                        android:id="@+id/txtTilteEvaluationDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="18sp"
                        android:text="Quá dở"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_toEndOf="@id/img"/>
                <TextView
                        android:id="@+id/txtContentEvaluation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtTilteEvaluationDetail"
                        android:layout_toEndOf="@id/img"
                        android:padding="5dp"
                        android:text="@string/text"
                        android:textSize="16sp"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerChild"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/relaHeader"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
            android:id="@+id/relaEdtEvaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-3dp">
        <EditText
                android:id="@+id/edtEvaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_evaluation"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textCursorDrawable="@null"
                style="@style/EditextStyle"
                android:backgroundTint="@color/colorPrimary"
                android:layout_toStartOf="@id/ibtnSend"
        />
        <ImageButton
                android:id="@+id/ibtnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send_24dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>