<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                >

    <TextView
            android:id="@+id/txtTitleEvaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Tốt"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_toStartOf="@id/txtTimeEvaluation"
    />
    <TextView
            android:id="@+id/txtTimeEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/4/2019"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    <RatingBar
            android:id="@+id/ratingEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="5"
            android:layout_gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:theme="@style/RatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_below="@id/txtTitleEvaluation"
            android:layout_alignParentStart="true"
    />
    <TextView
            android:id="@+id/txtIsOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/txtTitleEvaluation"
            android:textColor="@color/green_compelete"
            android:layout_toEndOf="@id/ratingEvaluation"/>
    <TextView
            android:id="@+id/txtNameUserEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/txtTimeEvaluation"
            android:text="Vũ Quốc Thiên"/>
    <TextView
            android:id="@+id/txtContentValuation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingEvaluation"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Dở quá dở , dở hơn mong đợi"/>
    <ImageView
            android:id="@+id/imgEvaluation1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:scaleType="center"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/imgEvaluation2"
            android:layout_below="@id/txtContentValuation"
            android:layout_marginStart="0dp"/>

    <ImageView
            android:id="@+id/imgEvaluation2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtContentValuation"/>
    <ImageView
            android:id="@+id/imgEvaluation3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/imgEvaluation2"
            android:scaleType="center"
            android:layout_below="@id/txtContentValuation"
    />
    <TextView
            android:id="@+id/txtthanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thanks"
            android:textColor="#00C20D"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/txtReply"
            android:layout_below="@id/imgEvaluation1"
            />
    <TextView
            android:id="@+id/txtReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imgEvaluation1"
            android:textColor="#00C20D"
            android:text="@string/reply"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerReply"
            android:layout_below="@id/txtthanks"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"/>

</RelativeLayout>