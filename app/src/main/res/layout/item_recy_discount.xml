<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

    <RelativeLayout
            android:id="@+id/relaLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp">
        <RelativeLayout
                android:id="@+id/relaLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 ngày nữa"
                    android:textSize="12sp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:drawableStart="@drawable/ic_timer_20dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="4dp"
                    android:paddingStart="4dp"
                    android:background="@color/colorAccent"
                    android:layout_gravity="center|end"
                    android:textColor="@color/colorIconsText"
            />

            <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTime"
                    android:text="31/02/2019"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingStart="4dp"
                    android:layout_alignParentStart="true"
                    android:paddingEnd="4dp"
                    android:layout_marginTop="1dp"
                    android:gravity="end"
                    android:textColor="@color/colorIconsText"
                    android:background="@color/colorAccent"
                    android:layout_alignEnd="@+id/txtTime"/>


            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/txtDate"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_main"
            />

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/lineMidde"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_line_discount_item"
                android:layout_toEndOf="@id/relaLeft"
                android:orientation="horizontal"
        />
        <RelativeLayout
                android:id="@+id/relaRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/lineMidde">
            <TextView
                    android:id="@+id/txtLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Có giới hạn"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold|italic"
                    android:background="@drawable/shape_stoke_discount"
                    android:padding="6dp"
                    android:textSize="12sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

            <TextView
                    android:id="@+id/txtNameDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/txtLimit"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="16sp"
                    android:text="Ưu đãi 30% cho đơn hàng trên 100.000đ"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_alignParentEnd="true"/>

            <TextView
                    android:id="@+id/txtReadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/read_more_point"
                    android:layout_below="@id/txtNameDiscount"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="16sp"
                    android:textColor="#007203"
                    android:textStyle="bold"
            />
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_pin_discount2"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>