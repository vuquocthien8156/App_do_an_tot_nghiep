<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.view.cart.AddToCartActivity">

    <ImageButton
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close_black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"/>

    <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:id="@+id/txtNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:padding="2dp"
            android:text="Trà đào cam sả tùm lum tá lả"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:id="@+id/txtPriceProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_below="@id/txtNameProduct"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:text="50.000đ"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>
    <LinearLayout
            android:id="@+id/line1"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/imgProduct"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
    <TextView
            android:id="@+id/txtSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginTop="6dp"
            android:layout_below="@id/line1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"/>
    <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_toEndOf="@id/txtSize"
            android:layout_marginStart="16dp"
            android:layout_alignParentEnd="true"
            android:gravity="start"
            android:layout_marginEnd="20dp">
        <android.widget.Button
                android:id="@+id/btnS"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="@string/small"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_btn_size_nomal"

        />
        <android.widget.Button
                android:id="@+id/btnM"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="@string/fit"
                android:background="@drawable/shape_btn_size_nomal"
                android:layout_marginStart="20dp"
        />
        <android.widget.Button
                android:id="@+id/btnL"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="@string/large"
                android:background="@drawable/shape_btn_size_nomal"
                android:layout_marginStart="20dp"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/line2"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/ln"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    <RelativeLayout
            android:id="@+id/relaTopping"
            android:layout_below="@id/line2"
            android:layout_width="match_parent"
            android:background="@color/colorSecondaryText"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true">
        <TextView
                android:id="@+id/txtAddtopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorIconsText"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/add_topping"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recylerToppingSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAddtopping"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:paddingBottom="8dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/line3"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/relaTopping"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    <FrameLayout
            android:id="@+id/frmNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

        <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="@color/colorPrimary"
                app:hintTextAppearance="@style/HintText">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="42dp"
                    android:textSize="14sp"
                    android:hint="@string/your_note"
                    android:id="@+id/edtNote"
                    android:inputType="text"
                    android:backgroundTint="@color/colorSecondaryText"
                    android:textCursorDrawable="@null"
                    android:focusableInTouchMode="true"
            />
        </android.support.design.widget.TextInputLayout>

        <ImageButton
                android:id="@+id/ibtnClearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:layout_marginTop="18dp"/>
    </FrameLayout>

    <RelativeLayout
            android:id="@+id/lnSu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frmNote"
            android:gravity="center_vertical">
        <TextView
                android:id="@+id/txtSu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suggestions"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"/>

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="2dp"
                android:layout_toEndOf="@id/txtSu">
            <android.support.design.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipGroup"
                    style="@style/Widget.MaterialComponents.ChipGroup"
                    app:singleLine="true"
                    app:singleSelection="true"/>
        </HorizontalScrollView>

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/rela3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lnSu">
        <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/txtTamTinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/provisional"/>
            <TextView
                    android:id="@+id/txtSumPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="50.000đ"
                    android:textStyle="bold"
            />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ln2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true">
            <ImageButton
                    android:id="@+id/ibtnMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_circle_24dp"
                    android:background="@android:color/transparent"
                    android:padding="8dp"/>
            <EditText
                    android:id="@+id/edtQuantity"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@drawable/shape_edt_search"/>
            <ImageButton
                    android:id="@+id/ibtnPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_circle_24dp"
                    android:background="@android:color/transparent"
                    android:padding="8dp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/relaBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rela3"

    >
        <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/like"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_favorite_white_24dp"
                android:background="@drawable/shape_btn_unn_favorite"
        />

        <ImageButton
                android:id="@+id/btnAddCart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_add_shopping_cart_24dp"
                android:background="@drawable/shape_btn_add_cart"
        />
    </LinearLayout>

    <FrameLayout
            android:id="@+id/frmLoader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true">
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
    </FrameLayout>

</RelativeLayout>