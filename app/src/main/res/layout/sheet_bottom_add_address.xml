<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_behavior="@string/bottom_sheet_behavior"
              android:background="#fff">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="12dp"
    >
        <ImageButton
                android:id="@+id/ibtnCloseSheetBottomAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
        />

        <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ibtnCloseSheetBottomAdd"
                android:layout_toStartOf="@id/ibtnSave"
                android:layout_centerVertical="true"
                android:text="@string/info_address"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>

        <ImageButton
                android:id="@+id/ibtnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save_32dp"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
        />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/standardBottomSheet"
            style="?attr/bottomSheetStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp">
            <LinearLayout
                    android:id="@+id/ln1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">
                <EditText
                        android:id="@+id/edtNameCus"
                        android:layout_width="0dp"
                        android:layout_weight="4.6"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:hint="@string/name"
                        android:layout_marginEnd="2dp"
                        android:background="#fff"
                        android:inputType="textPersonName"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_person_gray_24dp"/>

                <EditText
                        android:id="@+id/edtPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_weight="4.6"
                        android:padding="4dp"
                        android:hint="@string/phone_number"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:focusableInTouchMode="false"
                        android:cursorVisible="true"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:drawablePadding="6dp"
                        android:inputType="phone"
                        android:drawableStart="@drawable/ic_local_phone_gray_24dp"/>
                <ImageButton
                        android:id="@+id/ibtnPhoneBook"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_contacts_24dp"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="3dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSecondaryText"
                    android:layout_below="@id/ln1"
                    android:orientation="horizontal"/>

            <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:background="#fff"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_location_directory_gray"
                    android:drawablePadding="4dp"
                    android:hint="@string/address_deivery"
                    android:paddingTop="6dp"
                    android:paddingStart="6dp"
                    android:paddingBottom="6dp"
                    android:paddingEnd="32dp"
                    android:textSize="14sp"/>

            <ImageButton
                    android:id="@+id/ibtnSearchPlace"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/line"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_search"
                    android:layout_marginTop="6dp"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSecondaryText"
                    android:layout_below="@id/edtAddress"/>

            <CheckBox
                    android:id="@+id/checkboxDefaultAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edtAddress"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:text="@string/address_delivery_default"/>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>